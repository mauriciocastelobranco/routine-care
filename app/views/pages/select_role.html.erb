<div class="rc-shell">
  <%= render "components/iphone_frame" do %>
    <div class="p-4">

      <h2 class="h5 fw-bold mb-2">Qual é o seu perfil?</h2>
      <p class="text-muted small mb-4">
        Isso ajuda o RoutineCare a organizar a experiência certa pra você.
      </p>

      <%= form_with model: @user, url: select_role_path, method: :patch do |f| %>
        <div class="d-flex flex-column gap-3">

          <label class="rc-card p-3 rounded-4 bg-white shadow-sm d-flex align-items-center gap-3">
            <%= f.radio_button :role, "caregiver", class: "form-check-input me-2" %>
            <div>
              <div class="fw-semibold">Sou Cuidador(a)</div>
              <div class="text-muted small">
                Organizo rotinas, medicações e compromissos.
              </div>
            </div>
          </label>

          <label class="rc-card p-3 rounded-4 bg-white shadow-sm d-flex align-items-center gap-3">
            <%= f.radio_button :role, "patient", class: "form-check-input me-2" %>
            <div>
              <div class="fw-semibold">Sou Paciente</div>
              <div class="text-muted small">
                Acompanho minha rotina de saúde com apoio.
              </div>
            </div>
          </label>

        </div>

        <%= f.submit "Continuar", class: "btn btn-success w-100 py-3 fw-bold rounded-4 mt-4" %>
      <% end %>

    </div>
  <% end %>
</div>
