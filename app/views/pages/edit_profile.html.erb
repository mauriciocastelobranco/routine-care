<div class="rc-shell">
  <%= render "components/iphone_frame" do %>

    <h2 class="h5 fw-bold mb-3">Editar Perfil</h2>

    <%= form_with url: "#", method: :patch, class: "d-flex flex-column gap-3" do %>

      <div>
        <label class="small fw-semibold mb-1">Nome</label>
        <input type="text" class="form-control" placeholder="Seu nome">
      </div>

      <div>
        <label class="small fw-semibold mb-1">Email</label>
        <input type="email" class="form-control" placeholder="email@exemplo.com">
      </div>

      <div>
        <label class="small fw-semibold mb-1">Atualizar foto</label>
        <input type="file" class="form-control">
      </div>

      <%= submit_tag "Salvar Alterações",
        class: "btn btn-primary w-100 py-3 fw-semibold rounded-4 mt-2" %>

    <% end %>

  <% end %>
</div>
