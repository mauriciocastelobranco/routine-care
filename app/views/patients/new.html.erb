<%= link_to "⬅ Voltar para lista de pacientes", patients_path, class: "btn btn-link" %>

<h1>Novo paciente</h1>

<%= form_with model: @patient do |f| %>
  <div class="field">
    <%= f.label :name, "Nome" %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :birth, "Data de nascimento" %><br>
    <%= f.date_field :birth %>
  </div>

  <div class="field">
    <%= f.label :address, "Endereço" %><br>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :insurance, "Convênio" %><br>
    <%= f.text_field :insurance %>
  </div>

  <div class="field">
    <%= f.label :insurance_number, "Número da carteirinha" %><br>
    <%= f.text_field :insurance_number %>
  </div>

  <div class="actions" style="margin-top: 12px;">
    <%= f.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
