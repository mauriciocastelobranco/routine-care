<div class="patient-form-page">
  <div class="patient-form-shell">

    <%= link_to "⬅ Voltar para o paciente", patient_path(@patient), class: "patient-form-back" %>

    <div class="patient-form-top">
      <div class="patient-form-badge" aria-hidden="true"><span>✎</span></div>
      <h1 class="patient-form-title">Editar paciente</h1>
      <p class="patient-form-subtitle">Atualize os dados do paciente abaixo</p>
    </div>

    <div class="patient-form-card">
      <%= render "form", patient: @patient %>
    </div>

  </div>
</div>
