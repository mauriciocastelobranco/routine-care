<%= link_to "⬅ Voltar para o paciente", patient_path(@patient), class: "btn btn-link" %>

<h1>Editar paciente</h1>

<%= form_with model: @patient do |f| %>
  <div class="field">
    <%= f.label :name, "Nome" %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :birth, "Data de nascimento" %><br>
    <%= f.date_field :birth %>
  </div>

  <div class="field">
    <%= f.label :address, "Endereço" %><br>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :insurance, "Convênio" %><br>
    <%= f.text_field :insurance %>
  </div>

  <div class="field">
    <%= f.label :insurance_number, "Número da carteirinha" %><br>
    <%= f.text_field :insurance_number %>
  </div>

  <h3>Medications</h3>

  <% @patient.medications.each do |med| %>
    <div class="field">
      <label for="name">Nome</label><br>
      <input type="text" value="<%= med.name %>" name="medication[<%= med.name %>][name]" id="medication_name">
    </div>

    <div class="field">
      <label for="dosage">Dosage</label><br>
      <input type="text" value="<%= med.dosage %>" name="medication[<%= med.name %>][dosage]" id="medication_dosage">
    </div>

    <br>
  <% end %>


  <div class="actions" style="margin-top: 12px;">
    <%= f.submit "Salvar alterações", class: "btn btn-primary" %>
  </div>
<% end %>
