<div class="auth-page">
  <div class="auth-shell">
    <div class="auth-top">
      <div class="auth-badge" aria-hidden="true"><span>+</span></div>

      <h1 class="auth-title">Criar conta</h1>
      <p class="auth-subtitle">Preencha os dados abaixo para começar</p>
    </div>

    <div class="auth-card">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-grid">
          <div class="form-field">
            <%= f.input :email,
              label: "E-mail",
              required: true,
              autofocus: true,
              input_html: { autocomplete: "email", class: "form-input" },
              label_html: { class: "form-label" } %>
          </div>

          <% if resource.respond_to?(:name) %>
            <div class="form-field">
              <%= f.input :name,
                label: "Nome",
                required: true,
                input_html: { autocomplete: "name", class: "form-input" },
                label_html: { class: "form-label" } %>
            </div>
          <% end %>

          <div class="form-field">
            <%= f.input :password,
              label: "Senha",
              required: true,
              hint: ("Mínimo de #{@minimum_password_length} caracteres" if @minimum_password_length),
              input_html: { autocomplete: "new-password", class: "form-input" },
              label_html: { class: "form-label" } %>
          </div>

          <div class="form-field">
            <%= f.input :password_confirmation,
              label: "Confirmar senha",
              required: true,
              input_html: { autocomplete: "new-password", class: "form-input" },
              label_html: { class: "form-label" } %>
          </div>
        </div>

        <div class="auth-actions">
          <%= f.button :submit, "Criar conta", class: "auth-cta" %>
        </div>
      <% end %>

      <div class="auth-links">
        <%= link_to "Já tenho conta — entrar", new_session_path(resource_name) %>
      </div>
    </div>
  </div>
</div>
