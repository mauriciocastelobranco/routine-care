<div class="auth-page">
  <div class="auth-shell">

    <div class="auth-card">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>

        <div class="auth-field">
          <%= f.input :email,
                label: "E-mail",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "auth-input", placeholder: "seuemail@exemplo.com" },
                label_html: { class: "auth-label" },
                wrapper_html: { class: "auth-wrapper" } %>
        </div>

        <div class="auth-field">
          <%= f.input :password,
                label: "Senha",
                required: false,
                input_html: { autocomplete: "current-password", class: "auth-input", placeholder: "••••••••" },
                label_html: { class: "auth-label" },
                wrapper_html: { class: "auth-wrapper" } %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="auth-row">
            <label class="auth-check">
              <%= f.check_box :remember_me %>
              <span>Lembrar de mim</span>
            </label>


          </div>
        <% end %>

        <div class="auth-actions">
          <%= f.button :submit, "Entrar", class: "auth-cta" %>
        </div>

        <div class="auth-links">
          <div class="auth-links">
  <%= link_to "Criar conta", new_registration_path(resource_name) %><br>
  <%= link_to "Esqueci minha senha", new_password_path(resource_name) %>
</div>

        </div>

      <% end %>
    </div>

  </div>
</div>
