<%# app/views/components/_iphone_frame.html.erb %>

<div class="position-relative mx-auto bg-white rounded-5 shadow-lg overflow-hidden"
     style="width: 375px; height: 812px; border-radius: 50px; border: 8px solid rgba(0,0,0,0.08);">

  <!-- Dynamic Island -->
  <div class="position-absolute"
       style="top: 12px; left: 50%; transform: translateX(-50%); width: 120px; height: 35px; background-color: #111; border-radius: 999px; z-index: 20;">
  </div>

  <!-- Status Bar -->
  <div class="position-absolute d-flex justify-content-between align-items-end px-4 pb-1"
       style="top: 0; left: 0; right: 0; height: 48px; z-index: 10;">
    <span class="text-dark fw-semibold" style="font-size: 11px;">9:41</span>

    <div class="d-flex align-items-center gap-1">
      <!-- Ícone 1 -->
      <svg class="me-1" style="width: 16px; height: 16px; color: #111;" fill="currentColor" viewBox="0 0 24 24">
        <path d="M1 9l2 2c4.97-4.97 13.03-4.97 18 0l2-2C16.93 2.93 7.08 2.93 1 9zm8 8l3 3 3-3c-1.65-1.66-4.34-1.66-6 0zm-4-4l2 2c2.76-2.76 7.24-2.76 10 0l2-2C15.14 9.14 8.87 9.14 5 13z"/>
      </svg>

      <!-- Ícone 2 -->
      <svg style="width: 16px; height: 16px; color: #111;" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17 4h-3V2h-4v2H7v18h10V4zm-4 16h-2v-5.5H9L12 9v5.5h2L11 20z"/>
      </svg>
    </div>
  </div>

  <!-- CONTEÚDO (equivalente ao {children} do React) -->
  <div class="h-100" style="padding-top: 48px; padding-bottom: 32px; overflow-y: auto;">
    <%= yield %>
  </div>

  <!-- Home Indicator -->
  <div class="position-absolute"
       style="bottom: 8px; left: 50%; transform: translateX(-50%); width: 128px; height: 4px; background-color: rgba(0,0,0,0.3); border-radius: 999px;">
  </div>
</div>
